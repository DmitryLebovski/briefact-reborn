<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:dialogTheme">@style/DialogStyle</item>
        <item name="android:alertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="DialogStyle" parent="android:Theme.Material.Dialog">
        <item name="android:colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/mainColor5</item>
        <item name="android:colorButtonNormal">@color/mainColor5</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>
</resources>